@using ElectronicTrade.Entities.Messages
@using ElectronicTrade.Entities.ViewModels.NotificationViewModel.NotificationTypes
@model SuccessfulOperationsViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Fonts/css/all.css" rel="stylesheet" />
</head>
<body>

    <div class="container" style="margin-top:20%;">
        <div class="card text-center">
            <div class="card-header" style="background-color:lightgreen;">
                <b style="color:dimgrey;">@Model.Header</b>
            </div>
            <div class="card-body" style="background-color:palegoldenrod;">
                <h5 class="card-title" style="color:limegreen;"><i class="fas fa-times"></i> @Model.title</h5>
                @foreach (SuccessfulMessageObject msg in Model.Items)
                {
                    <p class="card-text" style="color:lightseagreen;"><b><i class="far fa-times-circle"></i> @msg.Message</b></p> @* msg.Code ile mesajin kodunu da yakalayabilirsin.*@
                }
                <p class="btn btn-success" style="color:antiquewhite;">@Model.RedirectionMessage</p>
            </div>
            <div class="card-footer text-muted" style="background-color:lightgreen;">

            </div>
        </div>
    </div>

    @{
        string js = string.Empty;

        if (Model.IsRedirecting == true)
        {
            js = " setTimeout(function () {window.location = '" + Model.RedirectingUrl + "';}, " + Model.RedirectingTimeout + ");";
        }
    }


    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Fonts/js/all.js"></script>

    <script>
        $(function ()
        {
            @Html.Raw(js);
        });
    </script>
</body>
</html>
