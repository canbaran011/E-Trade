@using ElectronicTrade.Web.Models.ComplexViewModels
@model CheckOutComplexViewModel

@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">

    <div class="container">
        <div class="py-5 text-center">
            <img class="d-block mx-auto mb-4" src="~/Images/General/bag.png" alt="" width="72" height="72">

            <h2>Checkout form</h2>
            <p class="lead">Below is an example form built entirely with Bootstrap’s form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.</p>
        </div>
        @using (Html.BeginForm("CheckOut", "Cart", new { area = "User" }, FormMethod.Post))
        {

            <div class="row">
                @*Cart Begin*@
                @Html.Action("CheckOutCart")
                @*Cart End*@

                @*Form Section Begin*@
                <div class="col-md-8 order-md-1">
                    <h4 class="mb-3">Billing address</h4>
                    @*<form class="needs-validation" novalidate>*@
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName">First name</label>
                                @*<input type="text" class="form-control" id="firstName" placeholder="" value="" required>*@
                                @Html.TextBoxFor(x => x.checkout.FirstName, new { @class = "form-control", type = "text", id = "firstName", required = "required", placeholder = "FirstName" })
                                @Html.ValidationMessageFor(model => model.checkout.FirstName, "", new { @class = "text-danger" })
                                <div class="invalid-feedback">
                                    Valid first name is required.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName">Last name</label>
                                @*<input type="text" class="form-control" id="lastName" placeholder="" value="" required>*@
                                @Html.TextBoxFor(x => x.checkout.LastName, new { @class = "form-control", type = "text", id = "lastName", required = "required", placeholder = "LastName" })
                                @Html.ValidationMessageFor(model => model.checkout.LastName, "", new { @class = "text-danger" })
                                <div class="invalid-feedback">
                                    Valid last name is required.
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="username">Username</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">@@</span>
                                </div>
                                @*<input type="text" class="form-control" id="username" placeholder="Username" required>*@
                                @Html.TextBoxFor(x => x.checkout.Username, new { @class = "form-control", type = "text", id = "username", required = "required", placeholder = "Username" })
                                @Html.ValidationMessageFor(model => model.checkout.Username, "", new { @class = "text-danger" })
                                <div class="invalid-feedback" style="width: 100%;">
                                    Your username is required.
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="identificationnumber">Idenfication Number <span class="text-muted"></span></label>
                            @*<input type="text" class="form-control" id="identificationnumber" placeholder="Identification Number">*@
                            @Html.TextBoxFor(x => x.checkout.IdentificationNumber, new { @class = "form-control", type = "text", id = "identificationnumber", required = "required", placeholder = "Identification Number" })
                            @Html.ValidationMessageFor(model => model.checkout.IdentificationNumber, "", new { @class = "text-danger" })
                        </div>


                        <div class="mb-3">
                            <label for="email">Email <span class="text-muted">(Optional)</span></label>
                            @*<input type="email" class="form-control" id="email" placeholder="you@example.com">*@
                            @Html.TextBoxFor(x => x.checkout.Email, new { @class = "form-control", type = "email", id = "email", required = "required", placeholder = "you@example.com" })
                            @Html.ValidationMessageFor(model => model.checkout.Email, "", new { @class = "text-danger" })
                            <div class="invalid-feedback">
                                Please enter a valid email address for shipping updates.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="address">Address</label>
                            @*<input type="text" class="form-control" id="address" placeholder="1234 Main St" required>*@
                            @Html.TextBoxFor(x => x.checkout.Address, new { @class = "form-control", type = "text", id = "address", required = "required", placeholder = "1234 Main St" })
                            @Html.ValidationMessageFor(model => model.checkout.Address, "", new { @class = "text-danger" })
                            <div class="invalid-feedback">
                                Please enter your shipping address.
                            </div>
                        </div>

                        @*<div class="mb-3">
                                <label for="address2">Address 2 <span class="text-muted">(Optional)</span></label>
                                <input type="text" class="form-control" id="address2" placeholder="Apartment or suite">
                            </div>*@

                        <div class="row">

                            <div class="col-md-5 mb-3">
                                <label for="country">Country</label>
                                @Html.EnumDropDownListFor(x => x.dropdownlist.SelectedCountry, "Choose...", new { @class = "custom-select d-block w-100", id = "country", required = "required" })
                                @*<select class="custom-select d-block w-100" id="country" required>
                                        <option value="">Choose...</option>
                                        <option>United States</option>
                                    </select>*@
                                @Html.ValidationMessageFor(model => model.dropdownlist.SelectedCountry, "", new { @class = "text-danger" })
                                <div class="invalid-feedback">
                                    Please select a valid country.
                                </div>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label for="state">State</label>
                                @Html.EnumDropDownListFor(x => x.dropdownlist.SelectedState, "Choose...", new { @class = "custom-select d-block w-100", id = "country", required = "required" })
                                @*<select class="custom-select d-block w-100" id="state" required>
                                        <option value="">Choose...</option>
                                        <option>California</option>
                                    </select>*@
                                @Html.ValidationMessageFor(model => model.dropdownlist.SelectedState, "", new { @class = "text-danger" })
                                <div class="invalid-feedback">
                                    Please provide a valid state.
                                </div>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label for="zip">Zip</label>
                                @*<input type="text" class="form-control" id="zip" placeholder="" required>*@
                                @Html.TextBoxFor(x => x.checkout.Zip, new { @class = "form-control", type = "text", id = "zip", required = "required", placeholder = "7823 LA" })
                                @Html.ValidationMessageFor(model => model.checkout.Zip, "", new { @class = "text-danger" })
                                <div class="invalid-feedback">
                                    Zip code required.
                                </div>
                            </div>

                        </div>

                        <hr class="mb-4">

                        <div class="custom-control custom-checkbox">
                            @*<input type="checkbox" name="ShippingAddressAsBillAddress" class="custom-control-input" id="same-address" value="true">*@
                            @Html.CheckBoxFor(x=>x.checkout.ShippingAddressAsBillAddress,new { @class = "custom-control-input",id="same-address" })
                            <label class="custom-control-label" for="same-address">Shipping address is the same as my billing address</label>
                            @Html.ValidationMessageFor(model => model.checkout.ShippingAddressAsBillAddress, "", new { @class = "text-danger" })
                        </div>
                        <div class="custom-control custom-checkbox">
                            @*<input type="checkbox" name="SaveInformation" class="custom-control-input" id="save-info" value="true">*@
                            @Html.CheckBoxFor(x => x.checkout.SaveInformation, new { @class = "custom-control-input", id = "save-info" })
                            <label class="custom-control-label" for="save-info">Save this information for next time</label>
                            @Html.ValidationMessageFor(model => model.checkout.SaveInformation, "", new { @class = "text-danger" })
                        </div>
                        <hr class="mb-4">

                        <h4 class="mb-3">Payment</h4>

                        @*<div class="d-block my-3">
                            <div class="custom-control custom-radio">
                                <input id="credit" name="paymentMethod" type="radio" class="custom-control-input" checked required>
                                <label class="custom-control-label" for="credit">Credit card</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input id="debit" name="paymentMethod" type="radio" class="custom-control-input" required>
                                <label class="custom-control-label" for="debit">Debit card</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input id="paypal" name="paymentMethod" type="radio" class="custom-control-input" required>
                                <label class="custom-control-label" for="paypal">PayPal</label>
                            </div>
                        </div>*@


                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="cc-name">Name on card</label>
                                @*<input type="text" class="form-control" id="cc-name" placeholder="" required>*@
                                @Html.TextBoxFor(x => x.checkout.CreditCardName, new { @class = "form-control", type = "text", id = "cc-name", required = "required", placeholder = "MASTER - VISA" })
                                <small class="text-muted">Full name as displayed on card</small>
                                @Html.ValidationMessageFor(model => model.checkout.CreditCardName, "", new { @class = "text-danger" })
                                <div class="invalid-feedback">
                                    Name on card is required
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="cc-number">Credit card number</label>
                                @*<input type="text" class="form-control" id="cc-number" placeholder="" required>*@
                                @Html.TextBoxFor(x => x.checkout.CreditCardNumber, new { @class = "form-control", type = "text", id = "cc-number", required = "required", placeholder = "5831 - 5623 ..." })
                                @Html.ValidationMessageFor(model => model.checkout.CreditCardNumber, "", new { @class = "text-danger" })
                                <div class="invalid-feedback">
                                    Credit card number is required
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label for="cc-expiration">Expiration</label>
                                @*<input type="text" class="form-control" id="cc-expiration" placeholder="" required>*@
                                @Html.TextBoxFor(x => x.checkout.Expiration, new { @class = "form-control", type = "text", id = "cc-expiration", required = "required", placeholder = "08/2020" })
                                @Html.ValidationMessageFor(model => model.checkout.Expiration, "", new { @class = "text-danger" })
                                <div class="invalid-feedback">
                                    Expiration date required
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="cc-cvv">CVV</label>
                                @*<input type="text" class="form-control" id="cc-cvv" placeholder="" required>*@
                                @Html.TextBoxFor(x => x.checkout.CVV, new { @class = "form-control", type = "text", id = "cc-cvv", required = "required", placeholder = "687" })
                                @Html.ValidationMessageFor(model => model.checkout.CVV, "", new { @class = "text-danger" })
                                <div class="invalid-feedback">
                                    Security code required
                                </div>
                            </div>
                        </div>
                        <hr class="mb-4">
                        <button class="btn btn-primary btn-lg btn-block" type="submit"><i class="fas fa-shopping-basket"></i> Continue to checkout</button>
                    @*</form>*@
                </div>
                @*Form Section End*@
            </div>

        }

        <footer class="my-5 pt-5 text-muted text-center text-small">
            <p class="mb-1">&copy; 2017- Company Name</p>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="#">Privacy</a></li>
                <li class="list-inline-item"><a href="#">Terms</a></li>
                <li class="list-inline-item"><a href="#">Support</a></li>
            </ul>
        </footer>
    </div>



</div>

