@using ElectronicTrade.Web.UIOperations.CartOperations
@model Cart


<div class="col-md-4 order-md-2 mb-4">
    <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">Your cart</span>
        <span class="badge badge-secondary badge-pill">@Model.CartLines.Count</span>
    </h4>
    <ul class="list-group mb-3">

        @foreach (var item in Model.CartLines)
        {

            <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                    <h6 class="my-0">@item.Product.Name</h6>
                    <small class="text-muted">@item.Quantity  <i class="fas fa-times"></i> @item.Product.Price <i class="fas fa-equals"></i>  @((item.Product.Price * item.Quantity).ToString("c"))</small>
                </div>
                <span class="text-muted">@item.Product.Price</span>
            </li>

        }

        @*Promotion Code Begin*@
        <li class="list-group-item d-flex justify-content-between bg-light">
            <div class="text-success">
                <h6 class="my-0">Promo code</h6>
                <small>EXAMPLECODE</small>
            </div>
            <span class="text-success">-$5</span>
        </li>
        @*Promotion Code End*@

        @*Total Begin*@
        <li class="list-group-item d-flex justify-content-between">
            <span>Total (TL)</span>
            <strong>@Model.Total() ₺</strong>
        </li>
        @*Total End*@
    </ul>

    <div class="card p-2">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Promo code">
            <div class="input-group-append">
                <button type="button" class="btn btn-secondary btn-sm" style="font-size:xx-small;"><i class="fas fa-sync-alt"></i> Redeem</button>
            </div>
        </div>
    </div>
</div>
